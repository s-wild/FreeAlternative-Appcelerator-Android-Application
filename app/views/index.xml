 <Alloy>
	<Window class="container" theme="mytheme">
    <View id="wrapper">
  		<ImageView id="imageLogo"/>
  		<Label id="searchTitle">Search for an alternative telephone number.</Label>

  		<Label id="noResults" top="80">Sorry, no results.</Label>
  		<Label id="yesResults" top="80">Results:</Label>
      <!-- Previous search history will show here. -->
      <ScrollView id="searchResultsContainer"/>

      <!-- Search Bar Elements -->
      <SearchBar id="searchInputBox" class="beforeSearch"/>

      <View id="previousSearchBox">
        <!-- Previous search history -->
        <View id="previousSearchHeader">
          <!-- Icon -->
          <ImageView id="previousSearchIcon" />
          <!-- Label -->
          <Label id="previousSearchLabelText" class="regularFontSize" />
        </View>

        <!-- Previous search history will show here. -->
        <ScrollView id="searchHistoryResults"/>
      </View>
      <!-- Alert Box for rating a call. -->
  		<AlertDialog id="rateNumber" title="Rate your call"
              message="<b>Rate the number</b>" cancel="1">
  			<Widget id="starwidget" src="starrating" max='5' initialRating='0' />
              <!-- The ButtonNames tag sets the buttonNames property. -->
              <ButtonNames>
                  <ButtonName>Submit</ButtonName>
              </ButtonNames>
          </AlertDialog>
          <!-- Define the styling properties in the TSS file -->
          <ActivityIndicator id="activityIndicator" top="100"/>
    </View>
	</Window>
</Alloy>
